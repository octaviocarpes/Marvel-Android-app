<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/character_data_list_item_ID"
        android:layout_width="@dimen/item_textView_layout_width"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/item_textView_layout_marginStart"
        android:layout_marginTop="@dimen/item_textView_layout_marginTop"
        android:text="Character Item"
        android:textSize="@dimen/item_textView_textSize" />

    <TextView
        android:id="@+id/character_data_list_subitem_ID"
        android:layout_width="@dimen/subItem_textView_layout_width"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/character_data_list_item_ID"
        android:layout_marginBottom="@dimen/subItem_textView_layout_marginBottom"
        android:layout_marginTop="@dimen/subItem_textView_layout_marginTop"
        android:text="Subitem" />
</RelativeLayout>