<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CharacterDetailsActivity">

    <ImageView
        android:id="@+id/character_imageView_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/character_detail_imageView_layout_marginStart"
        android:layout_marginTop="@dimen/character_detail_imageView_layout_marginTop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/character_name_textView_ID"
        android:layout_width="@dimen/character_detail_textView_layout_width"
        android:layout_height="@dimen/character_detail_textView_layout_heigth"
        android:layout_marginStart="@dimen/character_detail_textView_layout_marginStart"
        android:layout_marginTop="@dimen/character_detail_textView_layout_marginTop"
        android:text="Character Name"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:textSize="@dimen/character_detail_textView_textSize"
        app:layout_constraintStart_toEndOf="@+id/character_imageView_ID"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/character_detail_linearLayout_layout_height"
        android:layout_marginEnd="@dimen/character_detail_linearLayout_layout_marginEnd"
        android:layout_marginStart="@dimen/character_detail_listView_margin_start"
        android:layout_marginTop="@dimen/character_detail_linearLayout_layout_marginTop"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/character_comics_button_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="comics" />

        <Button
            android:id="@+id/character_stories_button_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="stories" />

        <Button
            android:id="@+id/character_events_button_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="events" />

        <Button
            android:id="@+id/character_series_button_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="series" />

    </LinearLayout>

    <ListView
        android:id="@+id/character_data_list_view_ID"
        android:layout_width="match_parent"
        android:layout_height="@dimen/character_detail_listView_heigth"
        android:layout_marginEnd="@dimen/character_detail_listView_margin_end"
        android:layout_marginStart="@dimen/character_detail_listView_margin_start"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</android.support.constraint.ConstraintLayout>