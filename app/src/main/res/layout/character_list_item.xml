<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hero_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark">

    <ImageView
        android:id="@+id/hero_image_viewID"
        android:layout_width="@dimen/hero_image_width"
        android:layout_height="@dimen/hero_image_heigth"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/hero_image_margin_start"
        android:layout_marginTop="@dimen/hero_image_margin_top"
        android:layout_marginBottom="@dimen/hero_image_margin_bottom"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/hero_text_viewID"
        android:layout_width="@dimen/hero_name_width"
        android:layout_height="@dimen/hero_name_heigth"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/hero_image_viewID"
        android:layout_marginEnd="@dimen/hero_name_margin_end"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="@dimen/hero_name_text_size" />
</RelativeLayout>